@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" />
<script src="~/js/login.js"></script>

<div class="login-container facil" id="loginContainer">
    <h2 class="titulo">Acesso ao Sistema</h2>

    <form asp-controller="Login" asp-action="Login" method="post" id="formCadastro" class="login-form">
        <div class="form-group">
            <label for="Usuario">Usuário</label>
            <input type="text" id="Usuario" name="Usuario" class="form-control" placeholder="Digite seu usuário" required />
        </div>

        <div class="form-group">
            <label for="Senha">Senha</label>
            <input type="password" id="Senha" name="Senha" class="form-control" placeholder="Digite sua senha" required />
        </div>

        <!-- Botão de explicação só no modo fácil -->
        <button type="button" id="btnAjuda" class="btn btn-ajuda facil-only">❓ Dúvidas? Clique Aqui</button>

        <!-- Botão de login -->
        <button type="submit" class="btn btn-login">Entrar</button>

        <!-- Novo botão de cadastro -->
        <div class="text-center mt-3">
            <a href="/Cadastro/Index" class="btn btn-cadastro">Cadastre-se</a>
        </div>
    </form>
</div>

<!-- Overlay e tutorial -->
<div id="tutorialOverlay" class="tutorial-overlay"></div>
<div id="tutorialBox" class="tutorial-box">
    <p id="tutorialTexto"></p>
    <div class="tutorial-controls">
        <button id="btnAnterior" class="btn-tut">⬅ Anterior</button>
        <button id="btnProximo" class="btn-tut">Próximo ➡</button>
        <button id="btnFechar" class="btn-tut">Fechar ✖</button>
    </div>
</div>

<!-- Botão alternar modo -->
<div class="text-center mt-3">
    <button type="button" id="btnAlternar" class="btn btn-toggle">Tornar Difícil</button>
</div>
