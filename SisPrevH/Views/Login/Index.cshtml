@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" />
<script src="~/js/login.js"></script>

<style>
    .btn-tut, .btn-verde {
        background-color: #20c997 !important; /* verde padrão */
        color: white !important;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 14px;
        padding: 8px 14px;
        margin-left: 5px;
        transition: background 0.2s;
    }


        .btn-tut:hover, .btn-verde:hover {
            background-color: #1aa179 !important;
        }
</style>
<div class="login-container facil" id="loginContainer">
    <h2 class="titulo">Acesso ao Sistema</h2>

    <form asp-controller="Login" asp-action="Login" method="post" id="formCadastro" class="login-form">
        <div class="form-group">
            <label for="Usuario">Usuário</label>
            <input type="text" id="campoUsuario" name="Usuario" class="form-control" placeholder="Digite seu CPF" required />
        </div>

        <div class="form-group">
            <label for="Senha">Senha</label>
            <input type="password" id="campoSenha" name="Senha" class="form-control" placeholder="Digite sua senha" required />
        </div>

        <!-- Botão de explicação só no modo fácil -->
        <button type="button" id="btnAjudaLogin" class="btn btn-ajuda facil-only">❓ Dúvidas? Clique Aqui</button>

        <!-- Botão de login -->
        <button type="submit" class="btn btn-login">Entrar</button>

        <!-- Novo botão de cadastro -->
        <div class="text-center mt-3">
            <a href="/Cadastro/Index" class="btn btn-cadastro">Cadastre-se</a>
        </div>
    </form>
</div>

