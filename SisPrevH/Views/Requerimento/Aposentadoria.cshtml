@{
    ViewData["Title"] = "Requerer Aposentadoria";

    string nome = Context.Session.GetString("UsuarioNome") ?? "";
    string cpf = Context.Session.GetString("UsuarioCPF") ?? "";
    string dataNascimento = Context.Session.GetString("UsuarioDataNascimento") ?? "";
    string endereco = Context.Session.GetString("UsuarioEndereco") ?? "";
    string email = Context.Session.GetString("UsuarioEmail") ?? "";
}



<link rel="stylesheet" href="~/css/requerimento.css" />


<style>
    .lista-vinculos .item-vinculo {
        font-size: 14px;
        color: #333;
    }
</style>
<div class="pagina">

    <!-- ====================================================================================== -->
    <!-- =================================== MODO FÁCIL ======================================= -->
    <!-- ====================================================================================== -->
    <div id="modoFacil" class="modo-container">
        <form asp-action="Aposentadoria" method="post">

        <!-- ⬛ DADOS PESSOAIS -->
        <div class="card">
            <h3 class="card-titulo">Dados Pessoais</h3>

            <div class="linha">
                <div class="campo">
                    <label>Nome Completo</label>
                    <input type="text" name="NomeCompleto" value="@nome" />
                </div>

                <div class="campo">
                    <label>CPF</label>
                    <input type="text" name="CPF" value="@cpf" />
                </div>
            </div>

            <div class="linha">
                <div class="campo">
                    <label>Data de Nascimento</label>
                    <input type="date" value="@dataNascimento" />
                </div>

                <div class="campo">
                    <label>Matrícula</label>
                    <input type="text" value="" />
                </div>
            </div>

            <div class="linha">
                <div class="campo">
                    <label>Sexo</label>
                    <select>
                        <option>Masculino</option>
                        <option>Feminino</option>
                        <option>Outro</option>
                    </select>
                </div>

                <div class="campo">
                    <label>Estado Civil</label>
                    <select>
                        <option>Solteiro</option>
                        <option>Casado</option>
                        <option>Divorciado</option>
                        <option>Viúvo</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- ⬛ ENDEREÇO -->
        <div class="card">
            <h3 class="card-titulo">Endereço</h3>

            <div class="linha">
                <div class="campo">
                    <label>CEP</label>
                    <input type="text" value="" />
                </div>

                <div class="campo">
                    <label>Rua</label>
                    <input type="text" value="@endereco" />
                </div>
            </div>

            <div class="linha">
                <div class="campo">
                    <label>Número</label>
                    <input type="text" value="" />
                </div>

                <div class="campo">
                    <label>Complemento</label>
                    <input type="text" value="" />
                </div>
            </div>

            <div class="linha">
                <div class="campo">
                    <label>Bairro</label>
                    <input type="text" value="" />
                </div>

                <div class="campo">
                    <label>Cidade</label>
                    <input type="text" value="" />
                </div>

                <div class="campo">
                    <label>Estado</label>
                    <select>
                       <option>CE</option>
                        <option>SP</option>
                        <option>RJ</option>
                        <option>MG</option>
                        <option>RS</option>
                        <option>SC</option>
                        <option>PR</option>
                        <option>BA</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- ⬛ CONTATO -->
        <div class="card">
            <h3 class="card-titulo">Contato</h3>

            <div class="linha">
                <div class="campo">
                    <label>Telefone</label>
                    <input type="text" value="" />
                </div>

                <div class="campo">
                    <label>Celular / WhatsApp</label>
                    <input type="text" value="" />
                </div>
            </div>

            <div class="linha">
                <div class="campo">
                    <label>E-mail</label>
                    <input type="email" value="@email" />
                </div>
            </div>
        </div>

        <!-- ⬛ TIPO DE APOSENTADORIA -->
        <div class="card">
            <h3 class="card-titulo">Tipo de Aposentadoria</h3>

            <select>
                <option value="">Selecione...</option>
                <option>Aposentadoria por Tempo de Contribuição</option>
                <option>Aposentadoria por Idade</option>
                <option>Aposentadoria Especial</option>
                <option>Aposentadoria por Invalidez</option>
                <option>Aposentadoria Compulsória</option>
            </select>
        </div>

        <!-- ⬛ VÍNCULOS EMPREGATÍCIOS -->
        <div class="card">
            <h3 class="card-titulo">Vínculos Empregatícios</h3>

            <div class="linha">
                <div class="campo">
                    <label>Último Cargo</label>
                    <input type="text" value="" />
                </div>

                <div class="campo">
                    <label>Data de Ingresso</label>
                    <input type="date" value="" />
                </div>

                <div class="campo">
                    <label>Data de Saída</label>
                    <input type="date" value="" />
                </div>
            </div>

            <div class="linha">
                <div class="campo">
                    <label>Tempo Total de Serviço (anos)</label>
                    <input type="number" value="" />
                </div>
            </div>

            <button class="btn-mini">Adicionar Outro Vínculo</button>
        </div>

        <!-- ⬛ TEMPO ESPECIAL -->
        <div class="card">
            <h3 class="card-titulo">Tempo Especial</h3>

            <div class="linha">
                <div class="campo">
                    <label>Exposição a Agentes Nocivos?</label>
                    <select>
                        <option>Não</option>
                        <option>Sim</option>
                    </select>
                </div>

                <div class="campo">
                    <label>Descrição</label>
                    <input type="text" value="" />
                </div>

                <div class="campo">
                    <label>Anos de Exposição</label>
                    <input type="number" value="" />
                </div>
            </div>
        </div>

        <!-- ⬛ DEPENDENTES -->
        <div class="card">
            <h3 class="card-titulo">Dependentes</h3>

            <div class="linha">
                <div class="campo">
                    <label>Nome do Dependente</label>
                    <input type="text" value="" />
                </div>

                <div class="campo">
                    <label>Parentesco</label>
                    <select>
                        <option>Filho(a)</option>
                        <option>Cônjuge</option>
                        <option>Pai</option>
                        <option>Mãe</option>
                    </select>
                </div>

                <div class="campo">
                    <label>Data de Nascimento</label>
                    <input type="date" value="" />
                </div>
            </div>

            <button class="btn-add" data-add="dependente">Adicionar Dependente</button>
        </div>

        <!-- ⬛ INFORMAÇÕES BANCÁRIAS -->
        <div class="card">
            <h3 class="card-titulo">Informações Bancárias</h3>

            <div class="linha">
                <div class="campo">
                    <label>Banco</label>
                    <select>
                        <option>Banco do Brasil</option>
                        <option>Itaú</option>
                        <option>Caixa</option>
                        <option>Bradesco</option>
                        <option>Santander</option>
                    </select>
                </div>

                <div class="campo">
                    <label>Agência</label>
                    <input type="text" value="" />
                </div>

                <div class="campo">
                    <label>Conta</label>
                    <input type="text" value="" />
                </div>
            </div>
        </div>

        <!-- ⬛ DOCUMENTOS -->
        <div class="card">
            <h3 class="card-titulo">Documentos</h3>

            <ul>
                <li>Documento com foto</li>
                <li>Comprovante de residência</li>
                <li>Certidão de tempo de contribuição</li>
                <li>PPP (tempo especial)</li>
                <li>Relatórios médicos (se aplicável)</li>
            </ul>

            <input type="file" multiple />
        </div>

        <!-- ⬛ DECLARAÇÃO -->
        <div class="card">
            <h3 class="card-titulo">Declaração</h3>

            <label><input type="checkbox" /> Confirmo que as informações são verdadeiras.</label><br>
            <label><input type="checkbox" /> Autorizo o uso dos meus dados para análise.</label><br>
        </div>

        <button class="btn-enviar">Enviar Requerimento</button>
        </form>
    </div>


    <!-- ====================================================================================== -->
    <!-- ================================== MODO DIFÍCIL ====================================== -->
    <!-- ====================================================================================== -->
