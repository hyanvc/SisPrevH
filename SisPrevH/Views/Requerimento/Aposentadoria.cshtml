@{
    ViewData["Title"] = "Requerer Aposentadoria";
}

<link rel="stylesheet" href="~/css/requerimento.css" />

<div class="pagina">

    <!-- ===== BOTÕES DE MODO ===== -->
@*     <div class="modo-toggle">
        <button id="btnFacil" class="btn-modo ativo">Modo Fácil</button>
        <button id="btnDificil" class="btn-modo">Modo Difícil</button>
    </div> *@

    <!-- ====================================================================================== -->
    <!-- =================================== MODO FÁCIL ======================================= -->
    <!-- ====================================================================================== -->
    <div id="modoFacil" class="modo-container">

        <!-- BOTÃO DE AJUDA -->
        <div class="ajuda-container">
            <button id="btnAjuda" class="btn-ajuda">
                ❓ Precisa de Ajuda? Clique Aqui
            </button>
        </div>

        <!-- OVERLAY DO TUTORIAL -->
        <div id="tutorialOverlay" class="tutorial-overlay escondido"></div>

        <!-- TOOLTIP DO TUTORIAL -->
        <div id="tutorialTooltip" class="tutorial-tooltip escondido">
            <h3 id="tutorialTitulo"></h3>
            <p id="tutorialTexto"></p>

            <div class="tutorial-botoes">
                <button id="btnProximoTutorial" class="btn-tutorial">Próximo</button>
                <button id="btnFecharTutorial" class="btn-tutorial btn-fechar">Fechar</button>
            </div>
        </div>

        <!-- CONTEÚDO -->
        <div class="card" data-tutorial="dados">
            <h3 class="card-titulo">Dados Pessoais</h3>

            <div class="linha">
                <div class="campo" data-tutorial="nome">
                    <label>Nome Completo</label>
                    <input type="text" value="João da Silva" disabled />
                </div>

                <div class="campo" data-tutorial="cpf">
                    <label>CPF</label>
                    <input type="text" value="123.456.789-00" disabled />
                </div>
            </div>

            <div class="linha">
                <div class="campo" data-tutorial="nascimento">
                    <label>Data de Nascimento</label>
                    <input type="text" value="12/08/1965" disabled />
                </div>

                <div class="campo" data-tutorial="matricula">
                    <label>Matrícula</label>
                    <input type="text" value="445566" disabled />
                </div>
            </div>
        </div>

        <div class="card" data-tutorial="beneficio">
            <h3 class="card-titulo">Escolha o Tipo de Aposentadoria</h3>

            <select class="select-beneficio">
                <option value="">Selecione...</option>
                <option value="porTempo">Aposentadoria por Tempo de Contribuição</option>
                <option value="porIdade">Aposentadoria por Idade</option>
                <option value="especial">Aposentadoria Especial</option>
            </select>
        </div>

        <div class="card" data-tutorial="documentos">
            <h3 class="card-titulo">Documentos</h3>

            <p>Caso necessário, anexe os documentos listados abaixo:</p>
            <input type="file" multiple />
        </div>

        <button class="btn-enviar" data-tutorial="enviar">Enviar Requerimento</button>

    </div>


    <!-- ====================================================================================== -->
    <!-- ================================== MODO DIFÍCIL ====================================== -->
    <!-- ====================================================================================== -->
    <div id="modoDificil" class="modo-container escondido">

        <h2>MODO DIFÍCIL</h2>
        <p>Agora é tudo sem estilo nenhum.</p>

        <h3>Dados Pessoais</h3>

        <div>
            <label>Nome Completo</label><br>
            <input type="text" value="" />
        </div>
        <br>

        <div>
            <label>CPF</label><br>
            <input type="text" value="" />
        </div>
        <br>

        <div>
            <label>Data de Nascimento</label><br>
            <input type="text" value="" />
        </div>
        <br>

        <div>
            <label>Matrícula</label><br>
            <input type="text" value="" />
        </div>

        <br><br>

        <h3>Escolha o Tipo de Aposentadoria</h3>
        <select>
            <option value="">Selecione...</option>
            <option value="porTempo">Aposentadoria por Tempo de Contribuição</option>
            <option value="porIdade">Aposentadoria por Idade</option>
            <option value="especial">Aposentadoria Especial</option>
        </select>

        <br><br>

        <h3>Documentos</h3>
        <p>Anexe documentos caso precise:</p>
        <input type="file" multiple />

        <br><br>

        <button>Enviar Requerimento</button>
    </div>

</div>

<script src="~/js/requerimento.js"></script>
