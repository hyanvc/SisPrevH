@{
    ViewData["Title"] = "Cadastro";
}

<link rel="stylesheet" href="~/css/login.css" />
<script src="~/js/cadastro.js"></script>

<style>
        .btn-tut, .btn-verde {
        background-color: #20c997 !important; /* verde padrão */
        color: white !important;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 14px;
        padding: 8px 14px;
        margin-left: 5px;
        transition: background 0.2s;
    }
    .btn-tut.btn-fechar {
        background-color: #dc3545 !important; /* vermelho para fechar */
    }
    .btn-tut:hover, .btn-verde:hover {
        background-color: #1aa179 !important;
    }
</style>
<div class="login-container facil" id="cadastroContainer">
    <h2 class="titulo">Cadastro de Usuário</h2>

    <form id="formCadastro" class="login-form">
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" id="Nome" class="form-control" placeholder="Digite seu nome" required />
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" id="Email" class="form-control" placeholder="Digite seu e-mail" required />
        </div>

        <div class="form-group">
            <label for="Usuario">Usuário</label>
            <input type="text" id="Usuario" class="form-control" placeholder="Crie um usuário" required />
        </div>

        <div class="form-group">
            <label for="Senha">Senha</label>
            <input type="password" id="Senha" class="form-control" placeholder="Crie uma senha" required />
        </div>

        <!-- Botão de ajuda só no modo fácil -->
        <button type="button" id="btnAjuda" class="btn btn-ajuda facil-only">❓ Dúvidas? Clique Aqui</button>

        <!-- Botão de cadastro -->
        <button type="submit" class="btn btn-login">Cadastrar</button>

        <!-- Novo botão para voltar à tela de login -->
        <a href="/Login/Index" class="btn btn-cadastro">Ir para a Tela de Login</a>
    </form>
</div>

