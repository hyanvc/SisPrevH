<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SisPrevH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SisPrevH.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SisPrevH</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @if (Context.Session.GetString("UsuarioLogado") != null)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        </ul>

                        <div class="d-flex align-items-center">
                            <span class="me-3 fw-bold text-secondary">
                                @Context.Session.GetString("UsuarioLogado")
                            </span>
                            <form asp-controller="Login" asp-action="Logout" method="post" class="m-0">
                                <button type="submit" class="btn btn-danger btn-sm">Sair</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </nav>

        <!-- Botões de aumentar/diminuir fonte, topo esquerdo abaixo do menu -->
      
            <div class="container-fluid d-flex justify-content-start py-2" style="margin-top: 5px;">
                <button type="button" id="btnAumentarFonte" class="btn btn-toggle me-2">A+</button>
                <button type="button" id="btnDiminuirFonte" class="btn btn-toggle">A-</button>
            </div>
        
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer com botão Tornar Difícil / Fácil -->
    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-between align-items-center py-2">
            <div>
                &copy; 2025 - SisPrevH -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
            <div>
                <button type="button" id="btnAlternar" class="btn btn-toggle">Tornar Difícil</button>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const loginContainer = document.getElementById("loginContainer");
            const btnAlternar = document.getElementById("btnAlternar");
            const btnAumentar = document.getElementById("btnAumentarFonte");
            const btnDiminuir = document.getElementById("btnDiminuirFonte");
            let tamanhoFonte = 16;

            // Aumentar fonte
            btnAumentar?.addEventListener("click", function() {
                document.body.style.fontSize = `${++tamanhoFonte}px`;
            });

            // Diminuir fonte
            btnDiminuir?.addEventListener("click", function() {
                if (tamanhoFonte > 10) {
                    document.body.style.fontSize = `${--tamanhoFonte}px`;
                }
            });

            // Alternar modo fácil/difícil (válido para tela de login)
            btnAlternar?.addEventListener("click", function() {
                if (loginContainer) {
                    loginContainer.classList.toggle("facil");
                    loginContainer.classList.toggle("dificil");
                    btnAlternar.innerText = loginContainer.classList.contains("facil")
                        ? "Tornar Difícil" : "Tornar Fácil";

                    // Tutorial só no modo fácil
                    const btnAjuda = document.getElementById("btnAjuda");
                    if (btnAjuda) btnAjuda.style.display =
                        loginContainer.classList.contains("facil") ? "block" : "none";
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
